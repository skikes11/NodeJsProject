<!DOCTYPE html>
<html lang="en">

<head>
	<title>Login V1</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<!--===============================================================================================-->
</head>

<body>


	<div class="limiter">
		<div class="container-login100">

			<div class="wrap-login100">

				<div class="login100-pic js-tilt" data-tilt>
					<span class="login100-form-title">
						User Avatar
					</span>
					<% if(!user.avatar) { %>
						<img src="/images/img-user-res.png" alt="IMG">
						<% }else { %>
							<img src=<%=user.avatar %> alt="IMG">
						<% } %>

				</div>

				<form class="profile-form">
					<span class="login100-form-title">
						User profile
					</span>

					<div class="wrap-input100">
						<h6 style="text-align: center;" class="input100" type="text" name="email">
							<%= user.email %>
						</h6>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<b> Email </b>
						</span>
					</div>

					<div class="wrap-input100">
						<h6 style="text-align: center;" class="input100" type="text" name="name">
							<%= user.name %>
						</h6>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<b> Name </b>
						</span>
					</div>


					<div class="wrap-input100">
						<h6 style="text-align: center;" class="input100" type="text" name="phone">
							<%= user.phone %>
						</h6>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<b> Phone </b>
						</span>
					</div>

					<div class="wrap-input100">
						<h6 style="text-align: center;" class="input100" type="text" name="email">
							<%= user.dob %>
						</h6>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<b> Dob </b>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<a href="./loadUpdate" class="login100-form-btn">
							Update user profile
						</a>
					</div>


					<div class="container-login100-form-btn">
						<a  style="background-color: red;" type="button" href="./logout" class="login100-form-btn">
							Log out
						</a>
					</div>

				</form>
			</div>
		</div>
	</div>




	<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>
	<!--===============================================================================================-->
	<script src="/js/main.js"></script>

</body>

</html>